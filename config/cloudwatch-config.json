{
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              "file_path": "/opt/myapp/logs/app.log",
              "log_group_name": "myAppLogs",
              "log_stream_name": "{instance_id}",
              "timezone": "UTC"
            }
          ]
        }
      }

    },
    "metrics": {
      "metrics_collected": {
        "statsd": {
          "service_address": ":8125",
          "metrics_aggregation_interval": 60
        }
      }
    }
  }
  